<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeto.desktop.pages.dashboard.client.ProjectsController">
    <GridPane hgap="10.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label>Search</Label>
            <TextField />
        </HBox>

        <Button fx:id="newProject" text="New project" GridPane.columnIndex="1">
            New project
        </Button>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints fillWidth="false" halignment="RIGHT" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <TableView fx:id="table">
        <columns>
            <TableColumn fx:id="engineerColumn" prefWidth="75.0" text="Engineer" />
            <TableColumn fx:id="create_dateColumn" prefWidth="75.0" text="Creation Date" />
            <TableColumn fx:id="accpetedColumn" prefWidth="75.0" text="Accepted" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
