<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox spacing="10.0" styleClass="background" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.projeto.desktop.pages.dashboard.client.ProjectsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <GridPane hgap="10.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label>Search</Label>
            <TextField/>
        </HBox>

        <Button GridPane.columnIndex="1">
            New project
        </Button>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints fillWidth="false" halignment="RIGHT"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>

    <TableView fx:id="table">
        <columns>
            <TableColumn fx:id="addressColumn" prefWidth="75.0" text="Morada"/>
            <TableColumn fx:id="cityColumn" prefWidth="75.0" text="Cidade"/>
            <TableColumn fx:id="phoneColumn" prefWidth="75.0" text="Telefone"/>
            <TableColumn fx:id="serviceTypeColumn" prefWidth="75.0" text="Tipo"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
