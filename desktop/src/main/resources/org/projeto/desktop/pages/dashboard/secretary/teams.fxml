<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" stylesheets="@../../../assets/styles/global.css"
      styleClass="background"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.projeto.desktop.pages.dashboard.secretary.TeamsPageController">

    <GridPane hgap="10.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label>Search</Label>
            <TextField fx:id="searchField" />
        </HBox>

        <Button fx:id="newTeam" onAction="#openNewTeamModal" GridPane.columnIndex="1" GridPane.rowIndex="0">
            New Team
        </Button>
        <Button fx:id="delete" onAction="#delete" GridPane.columnIndex="1" GridPane.rowIndex="1">
            Delete
        </Button>
        <Button fx:id="addJob" onAction="#openNewTeamJobModal" GridPane.columnIndex="1" GridPane.rowIndex="2">
            New Job
        </Button>

        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints fillWidth="false" halignment="RIGHT" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <TableView fx:id="table" minHeight="200.0">
        <columns>
            <TableColumn fx:id="teamColumn" prefWidth="75.0" text="Team" />
            <TableColumn fx:id="busyColumn" prefWidth="75.0" text="Busy?" />
            <TableColumn fx:id="dailyValueColumn" prefWidth="75.0" text="Daily Value" />
            <TableColumn fx:id="leaderColumn" prefWidth="75.0" text="leader" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
