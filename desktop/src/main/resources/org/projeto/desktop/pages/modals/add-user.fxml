<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane stylesheets="@../../assets/styles/forms.css"
            style="-fx-background-color: -background-900"
            styleClass="modal"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.projeto.desktop.pages.modals.AddUserModalController">

    <FlowPane alignment="CENTER" styleClass="background">
        <VBox alignment="CENTER" styleClass="form-container">

            <fx:include source="../../components/register-form.fxml" />

            <HBox alignment="CENTER_RIGHT" prefHeight="0.0" prefWidth="0.0" spacing="8.0">
                <Button mnemonicParsing="false" text="Cancel" styleClass="secondary"/>
                <Button mnemonicParsing="false" text="Save" fx:id="save"/>
            </HBox>
        </VBox>
    </FlowPane>
</ScrollPane>
