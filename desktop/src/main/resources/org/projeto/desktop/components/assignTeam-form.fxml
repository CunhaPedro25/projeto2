<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="30.0" stylesheets="@../assets/styles/global.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeto.desktop.components.AssignTeamFormController">

    <VBox spacing="5.0">
        <HBox fillHeight="false" spacing="10.0">
            <VBox HBox.hgrow="ALWAYS">
                <Label contentDisplay="BOTTOM" styleClass="form-label" text= "Worker:" />
                <TextField fx:id="worker" layoutX="10.0" layoutY="10.0" />
            </VBox>

            <VBox HBox.hgrow="ALWAYS">
                <Label contentDisplay="BOTTOM" styleClass="form-label" text="Team" />
                <ComboBox fx:id="teamComboBox" layoutX="10.0" layoutY="10.0" />
            </VBox>

        </HBox>

    </VBox>

</VBox>
