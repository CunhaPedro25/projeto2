<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox HBox.hgrow="ALWAYS" spacing="5.0" stylesheets="@../assets/styles/global.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.projeto.desktop.components.ConstructionFormController">
    <HBox fillHeight="false" spacing="10.0">
        <VBox HBox.hgrow="ALWAYS">
            <Label contentDisplay="BOTTOM" styleClass="form-label" text="Projects" />
            <ComboBox fx:id="projectComboBox" layoutX="10.0" layoutY="10.0" />
        </VBox>
        <VBox HBox.hgrow="ALWAYS">
            <Label contentDisplay="BOTTOM" styleClass="form-label" text="Name" />
            <TextField fx:id="name" layoutX="10.0" layoutY="10.0" />
        </VBox>
    </HBox>

    <HBox fillHeight="false" spacing="10.0">
        <VBox HBox.hgrow="ALWAYS">
            <Label contentDisplay="BOTTOM" styleClass="form-label" text="State" />
            <ComboBox fx:id="stateComboBox" />
        </VBox>

        <VBox HBox.hgrow="ALWAYS">
            <Label contentDisplay="BOTTOM" styleClass="form-label" text="Stage" />
            <ComboBox fx:id="stageComboBox" />
        </VBox>
    </HBox>
</VBox>
